<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_0_4dp"
    android:layout_marginTop="@dimen/spacing_0_4dp"
    android:orientation="vertical"
    android:padding="@dimen/spacing_0_4dp">

    <TextView
        android:id="@+id/experience_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="49dp"
        android:layout_toEndOf="@+id/experience_image"
        android:layout_toRightOf="@+id/experience_image"
        android:padding="@dimen/spacing_2_16dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/experience_image"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:background="@drawable/background_exp_img"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:srcCompat="@color/gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/spacing_2_16dp"
        android:layout_marginRight="@dimen/spacing_0_4dp"
        android:layout_marginTop="@dimen/spacing_0_4dp"
        android:layout_toRightOf="@+id/experience_image"
        android:background="@color/gray_light"
        android:paddingTop="@dimen/spacing_2_16dp" />

</RelativeLayout>