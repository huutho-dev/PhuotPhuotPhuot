<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">



    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:padding="@dimen/spacing_0_4dp"
        android:elevation="@dimen/spacing_0_4dp"
        android:background="#46a94b"
        android:layout_marginTop="@dimen/spacing_2_16dp"
        android:paddingLeft="@dimen/spacing_3_24dp"
        android:paddingRight="@dimen/spacing_3_24dp"
        android:id="@+id/txt_detail_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f1f1f1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/spacing_1_8dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <ImageView
            android:layout_marginRight="@dimen/spacing_1_8dp"
            android:id="@+id/imv_draw_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/background_button_round"
            android:padding="@dimen/spacing_1_8dp"
            android:src="@drawable/ic_transfer_within_a_station_black_24dp" />

        <ImageView
            android:id="@+id/imv_navigate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/background_button_round"
            android:padding="@dimen/spacing_1_8dp"
            android:src="@drawable/ic_navigation_black_24dp" />
    </LinearLayout>



</RelativeLayout>