<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:elevation="@dimen/spacing_0_4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/spacing_0_4dp">


        <ImageView
            android:id="@+id/layout_item_place_imv_desc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_item_place_height_item"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/test" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_item_place_imv_desc"
            android:background="#c9c9c9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/layout_item_place_tv_title_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_1_8dp"
                android:ellipsize="end"
                android:lines="1"
                android:paddingTop="@dimen/spacing_0_4dp"
                android:text="Núi hàm lơn"
                android:textSize="@dimen/text_size_caption"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/layout_item_place_tv_city_of_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/layout_item_place_tv_title_desc"
                android:layout_below="@+id/layout_item_place_tv_title_desc"
                android:layout_marginLeft="@dimen/spacing_1_8dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="Hà nội"
                android:textSize="@dimen/text_size_mini" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_3_24dp" />

        <ImageView
            android:id="@+id/item_favorite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="@dimen/spacing_1_8dp"
            android:layout_marginRight="@dimen/spacing_1_8dp"
            android:layout_above="@+id/content"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_fav" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

