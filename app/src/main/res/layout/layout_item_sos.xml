<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_1_8dp"
    android:elevation="@dimen/spacing_1_8dp"
    android:orientation="vertical"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.huutho.phuotphuotphuot.widget.TextViewRoboto
            android:id="@+id/txt_city_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/colorAccent"
            android:paddingBottom="@dimen/spacing_0_4dp"
            android:paddingLeft="@dimen/spacing_1_8dp"
            android:paddingTop="@dimen/spacing_0_4dp"
            android:text="Tên Thành phố"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:textFonts="RobotoMedium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_2_16dp"
            android:orientation="horizontal">

            <com.huutho.phuotphuotphuot.widget.TextViewRoboto
                android:id="@+id/txt_police_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_2_16dp"
                android:text="Số điện thoại Cảnh sát"
                app:textFonts="RobotoMedium" />


            <ImageView
                android:id="@+id/btn_police_phone"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/spacing_2_16dp"
                android:background="@drawable/background_call"
                android:src="@drawable/ic_call_black_24dp"
                android:text="Call police" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_2_16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.huutho.phuotphuotphuot.widget.TextViewRoboto
                android:id="@+id/txt_hospital_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_2_16dp"
                android:text="Số điện thoại Bênh viện"
                app:textFonts="RobotoMedium" />


            <ImageView
                android:id="@+id/btn_hospital_phone"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/spacing_2_16dp"
                android:background="@drawable/background_call"
                android:src="@drawable/ic_call_black_24dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_2_16dp"
            android:layout_marginTop="@dimen/spacing_2_16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.huutho.phuotphuotphuot.widget.TextViewRoboto
                android:id="@+id/txt_rescue_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_2_16dp"
                android:text="Số điện thoại Trạm cứu hộ"
                app:textFonts="RobotoMedium" />


            <ImageView
                android:id="@+id/btn_rescue_phone"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/spacing_2_16dp"
                android:background="@drawable/background_call"
                android:src="@drawable/ic_call_black_24dp"
                android:text="Button" />
        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>