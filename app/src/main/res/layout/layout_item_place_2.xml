<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_0_4dp"
    android:elevation="@dimen/spacing_0_4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/spacing_0_4dp">


        <ImageView
            android:id="@+id/layout_item_place_imv_desc"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/test" />

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_item_place_imv_desc"
            android:background="#c9c9c9"
            android:backgroundTint="@color/colorAccent"
            android:orientation="vertical"
            android:padding="@dimen/spacing_0_4dp">

            <com.huutho.phuotphuotphuot.widget.TextViewRoboto
                android:id="@+id/layout_item_place_tv_title_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_1_8dp"
                android:ellipsize="end"
                android:lines="1"
                android:paddingTop="@dimen/spacing_0_4dp"
                android:text="Núi hàm lơn"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_caption"
                android:textStyle="bold"
                app:textFonts="RobotoMediumItalic" />

            <com.huutho.phuotphuotphuot.widget.TextViewRoboto
                android:id="@+id/layout_item_place_tv_city_of_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/layout_item_place_tv_title_desc"
                android:layout_below="@+id/layout_item_place_tv_title_desc"
                android:ellipsize="end"
                android:lines="1"
                android:text="Hà nội"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_mini"
                app:textFonts="RobotoMedium" />

            <ImageView
                android:id="@+id/item_favorite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/spacing_1_6dp"
                android:layout_marginRight="@dimen/spacing_1_6dp"
                android:padding="@dimen/spacing_0_4dp"
                android:src="@drawable/icon_fav"
                android:tint="#da1c25" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_3_24dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

