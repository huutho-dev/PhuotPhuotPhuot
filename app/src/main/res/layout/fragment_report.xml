<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white"
    android:orientation="vertical">

    <com.huutho.phuotphuotphuot.widget.ToobarBackButton
        android:layout_width="match_parent"
        android:id="@+id/toobar"
        android:layout_height="?attr/actionBarSize">

        <com.huutho.phuotphuotphuot.widget.TextViewRoboto
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="@dimen/text_5_20sp"
            app:textFonts="RobotoMedium" />
    </com.huutho.phuotphuotphuot.widget.ToobarBackButton>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/spacing_2_16dp"
        android:layout_marginRight="@dimen/spacing_2_16dp"
        android:layout_marginTop="@dimen/spacing_1_8dp"
        android:background="@drawable/background_form_report"
        android:minHeight="@dimen/spacing_5_40dp">

        <EditText
            android:id="@+id/fragment_report_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:hint="Report title"
            android:padding="10dp"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_2_16dp"
        android:layout_marginRight="@dimen/spacing_2_16dp"
        android:layout_marginTop="@dimen/spacing_1_8dp"
        android:background="@drawable/background_form_report"
        android:minHeight="200dp">

        <EditText
            android:id="@+id/fragment_report_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="Pls enter report content here ! Thanks u so much"
            android:padding="10dp"
            android:textSize="12sp" />
    </FrameLayout>

    <Button
        android:id="@+id/fragment_report_button_send"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_3_24dp"
        android:background="@drawable/background_button_draw_map"
        android:text="Send"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>